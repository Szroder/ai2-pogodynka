{% extends 'base.html.twig' %}

{% block title %}Edit Measurement{% endblock %}

{% block body %}
    <h1>Edit Measurement</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="mb-3">
        {{ form_label(form.date) }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Enter date'}}) }}
        {{ form_errors(form.date) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.celsius) }}
        {{ form_widget(form.celsius, {'attr': {'class': 'form-control', 'placeholder': 'Enter temperature in Celsius'}}) }}
        {{ form_errors(form.celsius) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.location) }}
        {{ form_widget(form.location, {'attr': {'class': 'form-control', 'placeholder': 'Select location'}}) }}
        {{ form_errors(form.location) }}
    </div>

    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

    {{ form_end(form) }}

    <a href="{{ path('app_measurement_index') }}" class="btn btn-secondary mt-3">Back to list</a>

    {# Dodaj formularz do usuwania #}
    {{ include('measurement/_delete_form.html.twig') }}
{% endblock %}
