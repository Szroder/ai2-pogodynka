{# templates/location/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Location{% endblock %}

{% block body %}
    <h1>Edit Location</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="mb-3">
        {{ form_label(form.city) }}
        {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.city) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.country) }}
        {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.country) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.latitude) }}
        {{ form_widget(form.latitude, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.latitude) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.longitude) }}
        {{ form_widget(form.longitude, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.longitude) }}
    </div>

    <button type="submit" class="btn btn-primary">Update</button>

    {{ form_end(form) }}

    <a href="{{ path('app_location_index') }}">back to list</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
